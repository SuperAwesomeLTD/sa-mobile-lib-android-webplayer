<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="#ff0"
    tools:context="superawesome.tv.sawebplayerdemoapp.MainActivity">

    <LinearLayout
        android:id="@+id/ButtonHolder"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="Play 1"
            android:onClick="playAd1"/>

        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="Play 2"
            android:onClick="playAd2"/>

        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="Play 3"
            android:onClick="playAd3"/>

        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="Play 4"
            android:onClick="playAd4"/>

        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="Play 5"
            android:onClick="playAd5"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/Banner1Holder"
        android:layout_margin="12dp"
        android:layout_below="@+id/ButtonHolder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>
